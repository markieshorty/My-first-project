@model RecommendStuff.Models.ViewModels.AppViewModel
                
<div class="color-box">
    <h1>
        <img src="../../Content/Images/cat-icon-apps.png" /> Recommend an app...
    </h1>
    @using (Html.BeginForm("RecAppRequest", "Home", FormMethod.Post))
    {

        <fieldset>

            <label class="add-label">
                App Name</label><br />
            <div class="editor-field">
                @Html.TextBoxFor(x => x.appName, new { @class = "add-textbox", @autofocus = "focus" })
                @Html.ValidationMessageFor(x => x.appName, "*")
            </div>

            <label class="add-label">
                Which Platform?</label><br />
            <div class="editor-field">
                @Html.DropDownListFor(x=>x.platform,Model.platforms, new { @class = "add-ddl" })
            </div>

            <label class="add-label">
                Add a link to the app
              </label><br />
            <div class="editor-field">
                @Html.TextBoxFor(x => x.url, new { @class = "add-textbox" })
                @Html.ValidationMessageFor(x => x.url, "*")
            </div>

            <label class="add-label">
                Spark a discussion - Any Tips or Praise?</label><br />
            <div class="editor-field">
                @Html.TextAreaFor(x => x.comment, new { @class = "textarea" })
            </div>

        </fieldset>

        <input type="submit" value="Add" class="register-button-app" />
    }
</div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" type="text/javascript"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" type="text/javascript"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jQuery.Validate/1.7/jQuery.Validate.min.js" type="text/javascript"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>



